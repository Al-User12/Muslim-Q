<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="14dp">

    <TextView
        android:id="@+id/tv_player_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/ask_audio_title" />

    <TextView
        android:id="@+id/tv_player_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="4sp"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/tv_player_title"
        tools:text="@string/ask_audio_desc" />

    <TextView
        android:id="@+id/tv_download"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="16dp"
        android:text="@string/download"
        android:textAlignment="center"
        android:textColor="@color/green_base"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_player_message" />

    <TextView
        android:id="@+id/tv_streaming"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="16dp"
        android:text="@string/play_online"
        android:textAlignment="center"
        android:textColor="@color/green_base"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_player_message" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:padding="16dp"
        android:text="@string/cancel"
        android:textColor="@color/green_base"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_download"
        app:layout_constraintEnd_toStartOf="@+id/tv_download"
        app:layout_constraintTop_toTopOf="@+id/tv_download" />

</androidx.constraintlayout.widget.ConstraintLayout>