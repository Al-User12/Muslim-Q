<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MuslimQ" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_base</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_base</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.MuslimQ.Toolbar">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="collapsedTitleStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/green_base</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="collapsedTabletTitleStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/green_base</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="expandedTitleStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/green_base</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BottomTextNavActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/green_base</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BottomTextNavInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PopUpMenuTablet" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CurvedDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_round_white</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>